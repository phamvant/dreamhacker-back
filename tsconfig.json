{
  "compilerOptions": {
    // "module": "NodeNext", //design to work with package.json that have type: module
    // "moduleResolution": "NodeNext",
    // "target": "ES2022",
    "module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "sourceMap": true, //map the compiled code back to the original code (JS) for debugging purposes
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "typeRoots": ["./typings", "./node_modules/@types"],
  "include": ["src/**/*", "typings/**/*.d.ts"]
}
